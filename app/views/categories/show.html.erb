<div class="row">
  <div class="col-sm-2">
    <ul class="nav nav-pill nav-stacked">
      <% @categories.each do |category| %>
        <li><%= link_to_if (category.products.size > 0), category.name, category_path(category) %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-10">
    <div class="row">
      <%= render :partial => "form_store/products/products", :collection => @products, :as => :product %>
    </div>
    <%= paginate @products, :theme => "twitter-bootstrap-3" %>
  </div>
</div>