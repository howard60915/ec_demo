<div class='col-sm-3 product'>
  <div class='media'>
    <%= image_tag Faker::Placeholdit.image("240x160", "png", 'e6e6e6'), class: 'pull-left' %>
    <div class='media-body'>
      <h2 class='product-name'><%= link_to product.name, category_product_path(:category_id => product.category, :id => product) %></h2>
      <div class='product-content'><%= truncate product.content, length: 100 %></div>
      <div class='product-price'><%= number_to_currency product.price %></div>
    </div>
  </div>
</div>