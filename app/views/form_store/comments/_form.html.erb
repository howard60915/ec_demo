<%= form_for Comment.new, :url => url do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name,:class => "form-control"%>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content,:class => "form-control", :rows => 3 %>
</div>

  <%= f.submit "Confirm", :class => "btn btn-success" %>
<% end %>