<h1>Your Order <%= @order.id %></h1>


<% if @order.paid? %>
  <p>Have been paid</p>
  <textarea>
    <%= @order.payments.last.params %>
  </textarea>
<% else %>
  <h3>選擇結帳方式</h3>
  <% Payment::PAYMENT_METHODS.each do |name| %>


  <%= link_to t(name, scope: 'payment.pay2go'), checkout_pay2go_order_path(:id => @order.id, payment_method: name), class: 'btn btn-default', method: :post %>

  <% end %>

<% end %>